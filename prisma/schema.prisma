generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String
  password  String
  avatar    String?
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  deletedAt DateTime?
  roles     Role[]
  contacts  Contact[]
}

model Role {
  id        String    @id @default(uuid())
  name      String
  ability   String
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  deletedAt DateTime?
  users     User[]
}

model Contact {
  id        String      @id @default(uuid())
  type      ContactEnum
  value     String
  createdAt DateTime    @default(now())
  updatedAt DateTime?   @updatedAt
  deletedAt DateTime?
  user      User        @relation(fields: [userId], references: [id])
  userId    String
}

enum ContactEnum {
  PHONE
  EMAIL
  FACEBOOK
  TWITTER
  INSTAGRAM
  LINKEDIN
  GITHUB
  WEBSITE
}
